<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/task_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fullname_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:labelFor="@+id/fullname"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Full Name" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/username_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:labelFor="@+id/username"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Username" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/password_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="20sp"
                android:text="Change Password" />
            
            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />
            
            <EditText
                android:id="@+id/new_password_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Verfy New Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/save_new_password_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff6733a"
                android:onClick="onBtnClicked"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Save new password"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>